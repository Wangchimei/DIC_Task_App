<div class="card bg-light mx-auto mt-5" style="max-width: 800px;">
  <div class="card-body mx-auto" style="min-width: 600px;">
    <h4 class="card-title my-4 text-center">新規アカウント</h4>
      <%=form_with(model: @user, local: true) do |f|%>
        <%= render 'shared/user_error'%>
        <div class="form-group input-group">
          <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-user"></i> </span>
          </div>
          <%= f.label :name, class:"sr-only"%>
          <%= f.text_field :name, class:"form-control", placeholder:"名前"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
        </div>
        <%= f.label :email, class:"sr-only"%>
        <%= f.email_field :email, class:"form-control", placeholder:"メールアドレス"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
        </div>
        <%= f.label :password, class:"sr-only"%>
        <%= f.password_field :password, class:"form-control", placeholder:"パスワード"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
          </div>
          <%= f.label :password_confirmation, class:"sr-only"%>
          <%= f.password_field :password_confirmation, class:"form-control", placeholder:"確認用パスワード"%>
        </div>

        <div class="form-group">
          <%= f.submit "登録する", class:"btn btn-info btn-block"%>
        </div>

        <p class="text-center">Have an account? <a href="">Log In</a> </p>
      <%end%>
    </div>
  </div>
</div>