<div class="card bg-light mx-auto mt-5" style="max-width: 800px;">
  <div class="card-body mx-auto" style="min-width: 600px;">
    <h4 class="card-title my-4 text-center"><%=t('admin.edit_user')%></h4>
      <%=form_with(model: [:admin, @user], local: true) do |f|%>
        <%= render 'shared/user_error'%>
        <div class="form-group input-group">
          <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-user"> <%=t('view.name')%></i></span>
          </div>
          <%= f.label :name, class:"sr-only"%>
          <%= f.text_field :name, class:"form-control"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-envelope"> <%=t('view.email')%></i></span>
        </div>
        <%= f.label :email, class:"sr-only"%>
        <%= f.email_field :email, class:"form-control"%>
        </div>

        <div class="form-group">
          <%= f.submit t('admin.update'), class:"btn btn-info btn-block"%>
        </div>

      <%end%>
    </div>
  </div>
</div>