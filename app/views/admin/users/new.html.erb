<div class="card bg-light mx-auto mt-5" style="max-width: 800px;">
  <div class="card-body mx-auto" style="min-width: 600px;">
    <h4 class="card-title my-4 text-center">ユーザーを作成</h4>
      <%=form_with(model: [:admin, @user], local: true) do |f|%>
        <%= render 'shared/user_error'%>
        <div class="form-group input-group">
          <div class="input-group-prepend">
              <span class="input-group-text"><i class="fa fa-user"> 名前</i></span>
          </div>
          <%= f.label :name, class:"sr-only"%>
          <%= f.text_field :name, class:"form-control"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-envelope"> メールアドレス</i></span>
          </div>
          <%= f.label :email, class:"sr-only"%>
          <%= f.email_field :email, class:"form-control"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-lock"> パスワード</i></span>
        </div>
        <%= f.label :password, class:"sr-only"%>
        <%= f.password_field :password, class:"form-control", placeholder:"パスワード"%>
        </div>

        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-lock"> 確認用パスワード</i></span>
          </div>
          <%= f.label :password_confirmation, class:"sr-only"%>
          <%= f.password_field :password_confirmation, class:"form-control", placeholder:"確認用パスワード"%>
        </div>


    <div class="my-3">
    </div>
        <div class="form-group input-group">
          <div class="input-group-prepend">
            <span class="input-group-text"><i class="fa fa-crown">管理者権限</i></span>
          </div>
          <%= f.label :admin, class:"sr-only"%>
          <%= f.select :admin, [['あり', true], ['なし', false]], class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "作成する", class:"btn btn-info btn-block"%>
        </div>
      <%end%>
    </div>
  </div>
</div>