<div class="title">
<p class="h3 my-4 text-center"><%=t('index.page_title')%></p>
</div>

<%=link_to t('index.new_task'), new_task_path, class:"btn btn btn-info" %>

<table class="table my-2">
  <thead class="text-center">
    <tr>
      <th scope="col"><%=t('view.task_title')%></th>
      <th scope="col"><%=t('view.task_content')%></th>
      <th scope="col"><%=t('index.task_management')%></th>
    </tr>
  </thead>
  <% @tasks.each do |task| %>
    <tbody>
      <tr>
        <td class="text-center task_list"><%=task.title%></td>
        <td><%=task.content%></td>
        <td class="text-center">
          <%=link_to t('index.detail'), task_path(task), class:"btn btn-info" %>
          <%=link_to t('view.edit'), edit_task_path(task), class:"btn btn-info" %>
          <%=link_to t('view.delete'), task_path(task), method: :delete, data: {confirm: t('view.delete_confirm')}, class:"btn btn-danger"%>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>